<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaohei.talker.fragment.assist.PermissionsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textAlignment="center"
            app:title="@string/title_assist_permissions"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:titleTextColor="@color/textPrimary" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:minHeight="@dimen/len_92"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/len_16"
            android:layout_height="wrap_content">
             <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="@dimen/len_16"
                 android:layout_marginBottom="@dimen/len_16"
                 android:layout_height="wrap_content">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAppearance="@style/TextAppearance.AppCompat.Title"
                     android:textColor="@color/textPrimary"
                     android:textSize="@dimen/font_16"
                     android:text="@string/label_permission_network"/>
                 <TextView
                     android:layout_marginTop="@dimen/len_20"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAppearance="@style/TextAppearance.AppCompat.Title"
                     android:textColor="@color/textSecond"
                     android:textSize="@dimen/font_14"
                     android:text="@string/label_permission_network_desc"/>
                 <ImageView
                     android:id="@+id/im_state_permission_network"
                     android:layout_width="@dimen/len_20"
                     android:layout_height="@dimen/len_20"
                     android:layout_gravity="end|center_vertical"
                     android:background="@null"
                     android:src="@drawable/ic_done"
                     android:tint="@color/colorAccent"
                     android:contentDescription="@string/app_name"
                     />
             </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/font_16"
                    android:text="@string/label_permission_read"/>
                <TextView
                    android:layout_marginTop="@dimen/len_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/textSecond"
                    android:textSize="@dimen/font_14"
                    android:text="@string/label_permission_read_desc"/>
                <ImageView
                    android:id="@+id/im_state_permission_read"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="end|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"
                    android:contentDescription="@string/app_name"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/font_16"
                    android:text="@string/label_permission_record_audio"/>
                <TextView
                    android:layout_marginTop="@dimen/len_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/textSecond"
                    android:textSize="@dimen/font_14"
                    android:text="@string/label_permission_record_audio_desc"/>
                <ImageView
                    android:id="@+id/im_state_permission_audio"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="end|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"
                    android:contentDescription="@string/app_name"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_16"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/font_16"
                    android:text="@string/label_permission_write"/>
                <TextView
                    android:layout_marginTop="@dimen/len_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/textSecond"
                    android:textSize="@dimen/font_14"
                    android:text="@string/label_permission_write_desc"/>
                <ImageView
                    android:id="@+id/im_state_permission_write"
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_gravity="end|center_vertical"
                    android:background="@null"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorAccent"
                    android:contentDescription="@string/app_name"
                    />
            </FrameLayout>
            <net.qiujuer.genius.ui.widget.Button
                android:layout_width="@dimen/len_172"
                android:id="@+id/btn_submit"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/len_48"
                android:background="@drawable/sel_btn_bg_accent_44"
                android:text="@string/label_permission_submit"
                android:textColor="@color/white"
                app:gTouchColor="@color/white_alpha_48"
                app:gTouchCornerRadius="22dp"
                app:gTouchEffect="ripple"
                android:layout_marginTop="@dimen/len_48"
                android:layout_height="@dimen/len_44" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

